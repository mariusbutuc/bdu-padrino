.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:news, :index)
      %li=link_to pat(:new), url(:news, :new)
      %li.active=link_to pat(:edit), url(:news, :edit, :id => @news.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:news)
    .inner
      -form_for :news, url(:news, :update, :id => @news.id), :method => :put, :class => :form do |f|
        =partial "news/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
