.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:testimonials, :index)
      %li=link_to pat(:new), url(:testimonials, :new)
      %li.active=link_to pat(:edit), url(:testimonials, :edit, :id => @testimonial.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:testimonial)
    .inner
      -form_for :testimonial, url(:testimonials, :update, :id => @testimonial.id), :method => :put, :class => :form do |f|
        =partial "testimonials/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
