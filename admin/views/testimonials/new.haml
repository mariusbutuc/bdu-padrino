.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:testimonials, :index)
      %li.active=link_to pat(:new), url(:testimonials, :new)
  .content
    %h2.title
      =pat(:new)
      =mt(:testimonial)
    .inner
      -form_for :testimonial, url(:testimonials, :create), :class => :form do |f|
        =partial "testimonials/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
